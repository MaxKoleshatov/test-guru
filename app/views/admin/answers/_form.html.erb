<%= form_with model: [:admin, @question, @answer] do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <p> 
  <%= form.label t('.text') %><br>
  <%= form.text_area :text, id: :answers_text, rows: 7, cols: 60 %>
</p>

<p> 
  <%= form.label t('.correct') %>:
  <%= form.check_box :correct, id: :answers_correct %>
</p>
   
<p>
  <%= form.submit%>
</p>
<% end %>
