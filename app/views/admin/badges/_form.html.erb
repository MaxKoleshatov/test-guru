<%= form_with model: [:admin, @badge] do |form| %>
    
      
  <p>
    <%= form.label "Название" %><br>
    <%= form.text_field :title%>
  </p><br>
      
  <p>
    <%= form.label "Изображение" %><br>
    <%= form.text_field :image %>
  </p><br>

  <p>
    <%= form.label "Правило" %><br>
    <%= form.select :rules, Badge::RULES.values, prompt: "Пожалуйста выберите правило"%>
  </p><br>

  <p>
    <%= form.label "Параметры" %><br>
    <%= form.text_field :options %>
  </p>  
      
  </p><%=form.submit %></p>
  <% end %>  