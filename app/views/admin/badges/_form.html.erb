<%= form_with model: [:admin, @badge] do |form| %>
          
  <p>
    <%= form.label t(".title") %><br>
    <%= form.text_field :title%>
  </p><br>
      
  <p>
    <%= form.label t(".image") %><br>
    <%= form.text_field :image %>
  </p><br>

  <p>
    <%= form.label t(".rule") %><br>
    <%= form.select :rules, AddBadgesService::RULES.keys, prompt: t(".promt")%>
  </p><br>

  <p>
    <%= form.label t(".options") %><br>
    <%= form.text_field :options %>
  </p>  
      
  </p><%=form.submit t(".create") %></p>
  <% end %>  