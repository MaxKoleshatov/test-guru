<div class="row justify-content-center">
  <div class="col col-md-4">
<h2><%= t('.sign_up')%></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
  <%= f.label t('.name') %><br>
  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="mb-3">
  <%= f.label t('.surname') %><br>
  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="mb-3">
    <%= f.label t('.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="mb-3">
    <%= f.label t('.password')%><br />
    <%= f.password_field :password, autocomplete: "new-password", id: "password" %>
  </div>

  <div class="mb-3">
    <%= f.label t('.password_confirm') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "password_confirm" %>
  </div>

  <div class="actions">
    <%= f.submit t('.reg') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
