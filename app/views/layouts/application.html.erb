<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style type="text/css">
      footer {
      position: fixed;
      left: 0; bottom: 0;
      padding: 10px;
      width: 100%
     }
    </style>
  </head>
  <body>

      <% if user_signed_in? %>
      <p class="nav user"><%= t('.welcome')%>, <b><%= current_user.email %></b> Guru </p>
      <p class="nav user"><%= link_to t('.log_out'), destroy_user_session_path, method: :delete %></p> 
      <% end %>

      <%= render 'shared/flash' %>

    <%= yield %>
  </body>
  <%= render 'shared/footer' %>
</html>
