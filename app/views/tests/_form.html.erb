<%= form_with model: @test do |form| %>
    <% if @test.errors.present? %>
      <div>
        <h2> Найдена ошибка </h2>
  
        <ul>
          <% @test.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </p><br>
  
    <p>
      <%= form.label :level %><br>
      <%= form.number_field :level %>
    </p>
  
    <p>
      <%= form.label :category_id %><br>
      <%= form.collection_select :category_id, Category.all, :id, :title, promt: true%>
    </p>
  
    <p>
      <%= form.label :author_id %><br>
      <%= form.collection_select :author_id, User.all, :id, :name, promt: true%>
    </p>
  
    </p><%=form.submit %></p>
<% end %>
  