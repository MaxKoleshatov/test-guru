<h1>Вопрос теста - <%= @question.test.title%></h1>

<p><%= @question.body%></p>

<h2> Ответы </h2>

<ol>
<%= render @question.answers%>
</ol>

<%= link_to 'Новый ответ', new_question_answer_path(@question) %> |

<%= link_to 'Редактировать вопрос', edit_question_path(@question) %> |

<%= link_to 'Удалить вопрос', question_path(@question), method: :delete %> |

<%= link_to 'Назад', test_path(@question.test.id) %>